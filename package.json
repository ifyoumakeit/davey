{
  "name": "davey",
  "version": "0.1.0",
  "description": "Dave's Alternate View Interpretation",
  "main": "./src/index.js",
  "repository": "git@github.com:ifyoumakeit/davey.git",
  "author": "Dave Garwacke <dave.garwacke@warbyparker.com>",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": ["packages/*", "examples/*"],
  "dependencies": {
    "isomorphic-fetch": "^2.2.1"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "microbundle": "^0.4.4",
    "parcel-bundler": "^1.6.2",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2",
    "jest": "^22.4.3",
    "lerna": "^2.9.0",
    "ts-jest": "^22.4.2",
    "commitizen": "^2.9.6"
  },
  "scripts": {
    "commit": "git add . && git cz",
    "pub": "yarn build && yarn lerna publish",
    "build":
      "yarn build:davey & yarn build:davey-dom & yarn build:davey-server & yarn build:davey-store",
    "build:davey": "microbundle --cwd packages/davey",
    "build:davey-dom": "microbundle --cwd packages/davey-dom",
    "build:davey-server": "microbundle --cwd packages/davey-server",
    "build:davey-store": "microbundle --cwd packages/davey-store",
    "build:davey-examples": "microbundle --cwd packages/davey-examples"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
