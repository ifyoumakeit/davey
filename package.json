{
  "name": "davi",
  "version": "0.0.1",
  "description": "Dave's Alternate View Interpretation",
  "main": "./src/index.js",
  "repository": "git@github.com:ifyoumakeit/davi.git",
  "author": "Dave Garwacke <dave.garwacke@warbyparker.com>",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "commitizen": "^2.9.6",
    "isomorphic-fetch": "^2.2.1"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "microbundle": "^0.4.4",
    "parcel-bundler": "^1.6.2",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  },
  "scripts": {
    "commit": "git add . && git cz",
    "build": "yarn build:davi & yarn build:davi-dom & yarn build:davi-server & yarn build:davi-store",
    "build:davi": "microbundle --cwd packages/davi",
    "build:davi-dom": "microbundle --cwd packages/davi-dom",
    "build:davi-server": "microbundle --cwd packages/davi-server",
    "build:davi-store": "microbundle --cwd packages/davi-store",
    "build:davi-examples": "microbundle --cwd packages/davi-examples"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
